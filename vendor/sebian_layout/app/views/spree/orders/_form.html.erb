<div class="cart-head">
  <ul class="row">
    <li class="col-sm-3">
      <h6><%= Spree.t(:products).upcase %></h6>
    </li>
    <li class="col-sm-3">
      <h6><%= Spree.t(:name).upcase %></h6>
    </li>
    <!-- QTY -->
    <li class="col-sm-1">
      <h6><%= Spree.t(:qty).upcase %></h6>
    </li>
    <!-- PRICE -->
    <li class="col-sm-2">
      <h6><%= Spree.t(:price).upcase %></h6>
    </li>
    <!-- TOTAL PRICE -->
    <li class="col-sm-2">
      <h6><%= Spree.t(:total_price).upcase %></h6>
    </li>
    <li class="col-sm-1"> </li>
  </ul>
</div>
<%= render partial: 'spree/orders/line_item', collection: order_form.object.line_items, locals: { order_form: order_form } %>
