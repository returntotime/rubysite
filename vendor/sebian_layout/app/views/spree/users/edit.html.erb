<%= render :partial=>"spree/shared/sub_title", :locals=>{:title => Spree.t(:editing_user), :breadcrumb_text => Spree.t(:editing_user)} %>

<section class="section-p-30px pages-in item-detail-page">
  <div class="container">
    <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @user } %>
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-custum">
        <div id="new-customer" class="panel-body" data-hook="login">
          <%= form_for Spree::User.new, :as => @user, :url => spree.user_path(@user), :method => :put do |f| %>
              <div data-hook="signup_inside_form">
                <%= render :partial => 'spree/shared/user_form', :locals => { :f => f } %>
                <p>
                  <%= f.submit Spree.t(:update), :class => 'btn btn-lg btn-dark btn-block' %>
                </p>
              </div>
          <% end %>
          <div data-hook="login_extras"></div>
        </div>
      </div>
    </div>
  </div>
</section>