<div data-hook="checkout_form_wrapper">
  <%= form_for order, :url => update_checkout_path(state), :html => { :id => "checkout_form_#{state}" }, :remote => (state == 'address' || state == 'delivery') ? true : false do |form| %>
    <%= form.hidden_field :state_lock_version %>
    <%= render "spree/checkout/#{state}", :form => form %>
  <% end %>
</div>
