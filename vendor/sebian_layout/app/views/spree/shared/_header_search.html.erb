
<button data-toggle="collapse-side" data-target=".side-collapse" type="button" class="navbar-toggle pull-right">
  <span></span>
</button>
<div class="nav-right">
  <div class="mt-nav-search">
    <div class="nav-search-icon mt-icon"> </div>
    <div class="nav-search-detail mt-open">
      <!---->
      <%= form_tag spree.products_path, :method => :get do %>
        <div class="input-group">
          <div class="input-group-btn search-panel">
            <button type="button" class="btn btn-default dropdown-toggle mt-button" data-toggle="dropdown">
              <span id="search_concept">All Categories</span> <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><a href="">All Categories</a></li>
              <% Spree::Menu.menu_parents.order(:position).each do |m| %>
                <li <%= (params[:taxon].present? && params[:taxon] == m.taxon_id) ? 'class="active"' : '' %> ><a href="#<%= m.taxon.present? ? m.taxon_id : '' %>"><%= m.link_text.titleize %></a></li>
              <% end %>
            </ul>
          </div>
          <input type="hidden" name="taxon" value="" id="search_param">
          <%= search_field_tag :keywords, params[:keywords], :placeholder => Spree.t(:search), class: "mt-input" %>
          <span class="input-group-btn">
            <%= button_tag(type: 'submit', class: 'btn btn-default mt-summit') do %>
            <span class="glyphicon glyphicon-search"></span>
        <% end %>
          </span>
        </div>
      <% end %>
      <!---->
    </div>
  </div>
  <!-- end search -->

  <!-- card -->
  <%= render :partial => "spree/shared/header_cart" %>
  <!-- end card -->
</div>