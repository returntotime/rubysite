<div class="top-bar">
  <div class="container">
    <!-- Language -->
    <div class="language">
      <!--<a href="#." class="active">EN</a>-->
      <!--<a href="#.">FR</a>-->
      <!--<a href="#.">GE</a>-->
    </div>
    <% if @top_promotion.present? %>
      <div class="mt-free">
        <%= @top_promotion.name %>
        <!--WITH CODE: -->
        <%#= @top_promotion.code %>
      </div>
    <% end %>
    <% if Spree::Config[:contact_phone] %>
      <div class="mt-phone"> <%= image_tag "Phone.png" %><%= Spree::Config[:contact_phone] %></div>
    <% end %>
    <div class="top-links">
      <ul>
        <% if spree_current_user %>
            <li><a href="<%= logout_path %>">LOGOUT</a></li>
            <li><a href="<%= account_path %>">MY ACCOUNT</a></li>
            <!--li><a href="<%= wishlists_path %>">MY WISHLISTS</a></li-->
        <% else %>
            <li><a href="<%= login_path %>">LOGIN</a></li>
            <li><a href="<%= signup_path %>">REGISTER</a></li>
        <% end %>
            <li><a href="<%= wishlist_options_wishlists_path %>">WISH LIST</a></li>
      </ul>
      <!-- Social Icons -->
      <ul class="social_icons">
        <%- if @socials.count > 0 %>
          <% @socials.each do |social| %>
            <li><a href="<%= url_with_protocol(social.url) %>" rel="nofollow" target="_blank"><%= image_tag social.icon.url(:mini) %></a></li>
          <% end %>
        <% end %>
        <!--<li class="facebook"><a href="#."><i class="fa fa-facebook"></i> </a></li>-->
        <!--<li class="twitter"><a href="#."><i class="fa fa-twitter"></i> </a></li>-->
        <!--<li class="dribbble"><a href="#."><i class="fa fa-dribbble"></i> </a></li>-->
        <!--<li class="googleplus"><a href="#."><i class="fa fa-google-plus"></i> </a></li>-->
        <!--<li class="linkedin"><a href="#."><i class="fa fa-linkedin"></i> </a></li>-->
      </ul>
    </div>
  </div>
</div>