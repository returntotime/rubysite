<% if @store.present? && @store.show_slider %>
  <!--======= HOME MAIN SLIDER =========-->
  <% if Spree::Slide.published.location("home_slider").count > 0 %>
  <section class="home-slider">
    <div class="tp-banner-container">
      <div class="tp-banner-fix" >
        <ul>
          <% Spree::Slide.published.location("home_slider").order('position ASC').each do |s| %>
          <!-- Slider 1 -->
          <li data-transition="fade" data-slotamount="7">
            <%= image_tag s.slide_image.url, "data-bgposition" => "center top" %>
            <div class="overlay"></div>
            <!-- Layer -->
            <div class="tp-caption sft font-montserrat tp-resizeme rs-parallaxlevel-4" 
                  data-x="center" 
                  data-y="center" data-voffset="-30"
                  data-speed="700" 
                  data-start="1000" 
                  data-easing="easeOutBack"
                  data-customin="x:0;y:0;z:0;rotationX:0;rotationY:0;rotationZ:0;scaleX:0;scaleY:1;skewX:0;skewY:0;opacity:0;transformPerspective:600;transformOrigin:50% 50%;" 
                  data-splitin="none" 
                  data-splitout="none" 
                  data-elementdelay="0.1" 
                  data-endelementdelay="0.1" 
                  data-endspeed="300" 
                  data-captionhidden="on"
                  style="color: #fff; font-size: 48px; font-weight: bold; letter-spacing: 50px; "><%= s.name %></div>
            
            <!-- Layer -->
            <div class="tp-caption sfb  font-playfair text-center tp-resizeme rs-parallaxlevel-4" 
                  data-x="center" 
                  data-y="center" data-voffset="20" 
                  data-speed="1000" 
                  data-start="1700" 
                  data-easing="easeOutBack"
                  data-customin="x:0;y:0;z:0;rotationX:0;rotationY:0;rotationZ:0;scaleX:0;scaleY:1;skewX:0;skewY:0;opacity:0;transformPerspective:600;transformOrigin:50% 50%;" 
                  data-splitin="none" 
                  data-splitout="none" 
                  data-elementdelay="0.1" 
                  data-endelementdelay="0.1" 
                  data-endspeed="300" 
                  data-captionhidden="on" 
                  style="color: #fff; font-size: 18px; font-style:italic;"> <%= s.body %> </div>
            
            <!-- Layer -->
            <div class="tp-caption sfb tp-resizeme rs-parallaxlevel-4" 
                  data-x="center" 
                  data-y="center" data-voffset="100" 
                  data-speed="1000" 
                  data-start="2400" 
                  data-easing="easeOutBack"
                  data-customin="x:0;y:0;z:0;rotationX:0;rotationY:0;rotationZ:0;scaleX:0;scaleY:1;skewX:0;skewY:0;opacity:0;transformPerspective:600;transformOrigin:50% 50%;" 
                  data-splitin="none" 
                  data-splitout="none" 
                  data-elementdelay="0.1" 
                  data-endelementdelay="0.1" 
                  data-endspeed="300" 
                  data-captionhidden="on"> <!--a href="<%= products_path %>" class="btn">Shop Now</a> &nbsp; &nbsp; &nbsp; &nbsp; <a href="<%= s.slide_link.present? ? s.slide_link : "#" %>" class="btn btn-1">Discover</a--> </div>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </section>
  <% end %>
<% end %>