<div class="heading">
  <h4>Archive</h4>
</div>
<!-- CATEGORIES -->
<ul class="cate">
  <% Spree::BlogEntry.organize_blog_entries.to_a.reverse.each do |year, months_with_entries| %>
      <% d = DateTime.parse("1/#{year}") %>
      <% months_with_entries.each do |month, entries| %>
          <% d = DateTime.parse("#{year}, #{month}") %>
          <li><%= link_to I18n.l(d, :format => "%B %Y"), blog_archive_path(:year => d.year, :month => d.month) %></li>
      <% end %>
  <% end %>
</ul>
