- if @menu_bar.try(:errors).present?
  = render 'spree/admin/shared/error_messages', :target => @menu_bar

- content_for :page_title do
  = t('spree.admin.menu_bars.new_menu_bar')

= form_for([:admin, @menu_bar], :html => { :multipart => true }) do |f|
  = render "form", :form => f
  %p.form-buttons
    = button t('create'),"glyphicon glyphicon-ok"
    = t('or')
    = link_to t('cancel'), collection_url, :class => "btn btn-default"
= render :partial => 'spree/admin/shared/spree_menus_sidebar'